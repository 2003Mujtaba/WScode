<div class="contact-container">     
    <!-- Form to collect user's details, sends an email on submission -->
    <form id="contactForm" action="mailto:2003mujtaba@gmail.com" method="post" enctype="text/plain">
        <!-- Various input fields to capture name, email, phone, and comments -->
        <input type="text" id="name" placeholder="Name" required>
        <input type="email" id="email" placeholder="Email" required>
        <input type="tel" id="phone" placeholder="Cell No.">
        <textarea id="comments" placeholder="Comments" required></textarea>
        <button type="submit">Submit</button>
        <input id="reset" type="reset" value="Click here to reset the form"/>
    </form>
</div>
